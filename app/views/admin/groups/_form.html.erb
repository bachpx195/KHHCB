<%= simple_form_for [:admin, @group] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: t(:group_label_name), placeholder: t(:group_placeholder_name) %>
    <%= f.input :description, label: t(:group_label_description)%>
    <%= f.input :level, label: t(:group_label_level) , collection: 1 .. 3, :label_method => lambda { |owner| status_convert(owner) }, :selected =>  [t(:group_status_2),3] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t(:update) %> <%= link_to t(:back), admin_groups_path %>
  </div>
<% end %>
