<%= simple_form_for [:admin, @province] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: t(:province_name) %>
  </div>

    <div class="form-actions">
      <%= f.button :submit, t(:update) %> <%= link_to t(:back), admin_provinces_path %>
    </div>
<% end %>
