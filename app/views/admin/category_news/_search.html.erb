<div class="row">
  <%= simple_form_for :search, url: admin_category_news_index_path, :method => :get do |f| %>
      <div class="col-lg-4">
        <div class="input-group">
          <%= f.text_field :name, placeholder: t(:category_news_search_placeholder), class: 'form-control' %>

          <span class="input-group-btn">
            <%= f.button :submit, t(:search), class: 'btn btn-default' %>
          </span>
        </div><!-- /input-group -->
        <%- end %>
      </div><!-- /.col-lg-4 -->

      <div class="col-lg-8">
        <div class="pull-right">
          <!-- Button New -->
          <%= link_to (raw("<button type=\"button\" class=\"btn btn-default\"><span class=\"glyphicon glyphicon-plus\"></span> " + t(:new) + "</button>")), new_admin_category_news_path %>
          <!-- Button Export -->
          <%= link_to (raw("<button type=\"button\" class=\"btn btn-default\"><span class=\"glyphicon glyphicon-download-alt\"></span> " + t(:export) + "</button>")), admin_category_news_index_path(format: :xlsx) %>
          <!-- Button Import -->
          <button type="button" class="btn btn-default" data-toggle="modal" data-target="#importModal"><span class="glyphicon glyphicon-paperclip"></span> <%= t(:import) %></button>
        </div>
      </div><!-- /.col-lg-6 -->
</div><!-- /.row -->