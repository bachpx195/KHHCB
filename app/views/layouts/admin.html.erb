<!DOCTYPE html>
<html>
  <head>
    <title>KHOAHOCCHOBAN.VN</title>
    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">BLOOMGOO</a>
        </div>
        <ul class="nav navbar-nav">
          <li class="active">
            <%= link_to (raw("<span class=\"glyphicon glyphicon-stats\"></span> BẢNG TIN")), admin_dashboards_path %>
          </li>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-education"></span> KHÓA HỌC
              <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to (raw("<span class=\"glyphicon glyphicon-education\"></span> KHÓA HỌC")), admin_cources_path %>
              </li>
              <li>
                <%= link_to (raw("<span class=\"glyphicon glyphicon-book\"></span> DANH MỤC KHÓA HỌC")), admin_categories_path %>
              </li>

              <li>
                <%= link_to (raw("<span class=\"glyphicon glyphicon-tags\"></span> QUẢN LÝ THẺ (TAG)")), admin_tags_path %>
              </li>

            </ul>
          </li>
          <li>
            <%= link_to (raw("<span class=\"glyphicon glyphicon-picture\"></span> BANNER")), admin_banners_path %>
          </li>
          <li>
            <%= link_to (raw("<span class=\"glyphicon glyphicon-blackboard\"></span> SLIDE")), admin_slides_path %>
          </li>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-bullhorn"></span> TIN TỨC
              <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to (raw("<span class=\"glyphicon glyphicon-bullhorn\"></span> TIN TỨC")), admin_news_index_path %>
              </li>
              <li>
                <%= link_to (raw("<span class=\"glyphicon glyphicon-book\"></span> DANH MỤC TIN TỨC")), admin_category_news_index_path %>
              </li>
            </ul>
          </li>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-cog"></span> CẤU HÌNH
              <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to (raw("<span class=\"glyphicon glyphicon-cog\"></span> CẤU HÌNH")), admin_configs_path %>
              </li>
              <li>
                <%= link_to (raw("<span class=\"glyphicon glyphicon-map-marker\"></span> TỈNH THÀNH")), admin_provinces_path %>
              </li>
            </ul>
          </li>
          <li>
            <%= link_to (raw("<span class=\"glyphicon glyphicon-thumbs-up\"></span> PHẢN HỒI")), admin_feedbacks_path %>
          </li>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-user"></span> NGƯỜI DÙNG
              <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to (raw("<span class=\"glyphicon glyphicon-user\"></span> NGƯỜI DÙNG")), admin_users_path %>
              </li>
              <li>
                <%= link_to (raw("<span class=\"glyphicon glyphicon-briefcase\"></span> NHÓM NGƯỜI DÙNG")), admin_groups_path %>
              </li>
            </ul>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to (raw("<span class=\"glyphicon glyphicon-log-out\"></span> Đăng xuất")), destroy_user_session_path, :method => :delete %>
          </li>
          <li>
            <%= link_to (raw("<span class=\"glyphicon glyphicon-user\"></span>")), edit_user_registration_path %>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container">

      <% if notice != nil %>
      <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Đóng"><span aria-hidden="true">&times;</span></button>
        <strong>Thông báo: </strong> <%= notice %>
      </div>
      <% end %>

      <% if alert != nil %>
      <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Đóng"><span aria-hidden="true">&times;</span></button>
        <strong>Cảnh báo: </strong> <%= alert %>
      </div>
      <% end %>

      <ol class="breadcrumb">
        <%= render_breadcrumbs :tag => :li, :separator => "" %>
      </ol>
      <br/>
      <%= yield %>
    </div>
  </body>

</html>
