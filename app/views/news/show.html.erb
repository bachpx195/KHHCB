<div class="row">

  <div class="col-md-9">
    <h2><%= @news.title %></h2>

    <!-- Author -->
    <p>
      <span class="glyphicon glyphicon-time">&nbsp</span><%= @news.created_at.strftime("%m/%d/%Y %I:%M") %><%= t(:by) %>
      <a href="#"><%= t(:admin) %></a>
    </p>
    <img class="img-responsive" src="<%= @news.image.url(:large) %>" alt="" style="height: 300px; width: 900px; <%= @news.image_file_name.nil? ? "display: none" : "" %>">
    <p class="lead"><strong><%= raw(@news.description) %></strong></p>
    <p><%= raw(@news.content) %></p>
    <hr>
    <div class="well" style="<%= @related_news.empty? ? "display: none" : "" %>">
      <h4><%= t(:related_news) %></h4>
      <div class="row">
        <ul class="list-unstyled">
          <% @related_news.each do |new| %>
              <li class="col-md-6">
                <%= link_to (raw("<img class=\"col-md-4 img-circle\" src=\""+ new.image.url(:thumb)+ "\" style=\"height: 80px; width: 100px\" >")), news_path(new) %>
                <span class="col-md-8" style="padding-left: 0px;"><br><%= link_to new.title, news_path(new) %></span>
              </li>
          <% end %>
        </ul>
      </div>
    </div>

  </div>
  <div class="col-md-3">
    <br><br>
    <!-- Blog Categories Well -->
    <%= render('shared/news_right_sidebar') %>
    <!-- Side Widget Well -->
  </div>
</div>