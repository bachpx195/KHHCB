<h2><%=t(:login) %></h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, label: t(:user_email)  %>
    <%= f.input :password, required: false , label: t(:user_password) %>
    <%= f.input :remember_me, label: t(:remember), as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t(:login) %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
