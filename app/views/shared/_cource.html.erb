<!--KHÓA HỌC LIÊN QUAN KHÁC-->
<% if type==1 %>
    <div class="thumbnail">
      <img class="img-responsive" src="<%= cource.image.url(:medium) %>" alt="" style="height: 150px; width: 300px">
      <div class="caption">
        <h3><%= link_to cource.name, cource_path(cource) %> </h3>
        <p><span class="glyphicon glyphicon-usd" aria-hidden="true"></span> <%= convert_money(cource.cost) %> </p>
        <p>
          <span class="glyphicon glyphicon-time" aria-hidden="true"></span> <%= cource.cource_date.strftime(" %m/%d/%Y %I:%M") %>
        </p>
        <p><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span> <%= cource.address %></p>
        </p>
      </div>
    </div>

<% elsif type==2 %>
    <br>
    <div class="row">
      <div class="col-lg-12 text-center">
        <img class="img-responsive" src="<%= cource.image.url %>" alt="" style="height: 300px; width: 100%">

      </div>
    </div>
    <div class="spacer10"></div>
    <h1><%= cource.name %></h1>
    <p><span class="glyphicon glyphicon-book" aria-hidden="true"></span> <strong> <%= cource.category.name %> </strong>
    </p>
    <p><span class="glyphicon glyphicon-usd" aria-hidden="true"></span> <%= convert_money(cource.cost) %></p>
    <p><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> <%= cource.promotion_description %></p>
    <p>
      <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span> <%= cource.start_date.strftime("%d/%m/%Y %I:%M") %>
      - <%= cource.end_date.strftime("%d/%m/%Y") %></p>
    <p><span class="glyphicon glyphicon-time" aria-hidden="true"></span> <%= cource.schedule %> </p>
    <p><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span> <%= cource.organization_address %></p>
    <p><span class="glyphicon glyphicon-education" aria-hidden="true"></span> <%= cource.organization_name %></p>
    <p><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> <%= cource.organization_email %></p>
    <p><span class="glyphicon glyphicon-earphone" aria-hidden="true"></span> <%= cource.organization_phone %></p>

    <p>
      <% if cource.rate > 0 && cource.rate =!nil %>
          <% for i in 1..cource.rate %>
              <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
          <% end %>
      <% end %>
    </p>
    <p>
      <% if cource.viewed_count != nil %>
          <span class="glyphicon glyphicon-eye-open" aria-hidden="true"> <%= cource.viewed_count %></span>
      <% end %>
    </p>
    <p>
      <span class="glyphicon glyphicon-user" aria-hidden="true"></span> <%= cource.user.first_name %> <%= cource.user.last_name %>
    </p>

    <div class="spacer10"></div>
    <!--NỘI DUNG KHÓA HỌC-->
    <div class="row">
      <div class="col-lg-12 text-justify">
        <%= raw(cource.content) %>
      </div>
    </div>
    <!--ThanhPV-->
    <!--KHÓA HỌC DẠNG BẢNG-->
<% elsif type==3 %>
    <div class="thumbnail">
      <img class="img-responsive" src="<%= cource.image.url(:medium) %>" alt="" style="height: 230px; width: 400px">
      <div class="caption">

        <h3><%= link_to cource.name, cource_path(cource) %>
          <a href="#" class="btn btn-primary pull-right" role="button">Đăng ký</a></h3>
        <p><span class="glyphicon glyphicon-usd" aria-hidden="true"></span> <%= convert_money(cource.cost) %> </p>
        <p>
          <span class="glyphicon glyphicon-time" aria-hidden="true"></span><%= cource.created_at.strftime("%m/%d/%Y %I:%M") %>
        </p>
        <p><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span> <%= cource.address %></p>
        <p><span class="glyphicon glyphicon-education" aria-hidden="true"></span> <%= cource.organization_name %>
        </p>

        <p>
          <a href="#"><strong># <%= cource.name %></strong></a>
          <span class="pull-right">
              <% if cource.viewed_count != nil %>
                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> <%= cource.viewed_count %>
              <% end %>
            <% if cource.rate > 0 && cource.rate != nil %>
                    <% for i in 1..cource.rate %>
                    <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                <% end %>
            <% end %>
                </span>
        </p>
      </div>
    </div>
    <!--KHÓA HỌC DẠNG LIST-->
<% elsif type==4 %>
    <div class="thumbnail">
      <div class="caption row">
        <div class="col-md-5">
          <img class="img-responsive" src="<%= cource.image.url(:medium) %>" alt="" style="height: 200px; width: 300px">
        </div>
        <div class="col-md-7">
          <h3><%= link_to cource.name, cource_path(cource) %>
            <a href="#" class="btn btn-primary pull-right" role="button">Đăng ký</a></h3>
          <p><span class="glyphicon glyphicon-usd" aria-hidden="true"></span> <%= convert_money(cource.cost) %> </p>
          <p>
            <span class="glyphicon glyphicon-time" aria-hidden="true"></span> <%= cource.created_at.strftime("%m/%d/%Y %I:%M") %>
          </p>
          <p><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span> <%= cource.address %></p>
          <p>
            <span class="glyphicon glyphicon-education" aria-hidden="true"></span> <%= cource.organization_name %>
          </p>

          <p>
            <a href="#"><strong># <%= cource.name %></strong></a>
            <span class="pull-right">
              <% if cource.viewed_count != nil %>
                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> <%= cource.viewed_count %>
              <% end %>
              <% if cource.rate > 0 && cource.rate != nil %>
                <% for i in 1..cource.rate %>
                    <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                <% end %>
            <% end %>
            </span>
          </p>
        </div>
      </div>
    </div>
    <!--END THANHPV-->
    <!--ThinhLV-->
<% elsif type==5 %>
    <div class="thumbnail">
      <img class="img-responsive" src="<%= cource.image.url(:medium) %>" alt="" style="height: 200px; width: 300px;">
      <div class="caption">
        <h4><%= link_to cource.name, cource_path(cource) %></h4>
        <p>
          <span class="glyphicon glyphicon-time" aria-hidden="true"></span> <%= cource.cource_date.strftime("%m/%d/%Y %I:%M") %>
        </p>
        <p style="max-height: 2em">
          <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span><%= cource.address.truncate(57, omission: '') %>
        </p>
        </p>
      </div>
    </div>
<% else %>
<% end %>